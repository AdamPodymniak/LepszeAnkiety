@model IEnumerable<LepszeAnkiety.Repository.Entities.FieldType>

<form method="post">
	<div class="form-group">
		<label for="Name">Nazwa</label>
		<input class="form-control" type="text" name="Name" required />
	</div>
	<div class="form-group">
		<label for="FieldTypeID">Typ pola</label>
		<select class="form-control" name="FieldTypeID">
			@foreach(var type in Model)
			{
				<option value="@type.ID">@type.TypeName</option>
			}
		</select>
	</div>
	<div class="form-group">
		<label for="Required">Wymagany</label>
		<input class="form-check-input" type="checkbox" name="Required" value="true" />
	</div>
	<div class="form-group">
		<label for="Unique">Unikatowy</label>
		<input class="form-check-input" type="checkbox" name="Unique" value="true" />
	</div>
	<input type="submit" class="btn btn-primary" />
</form>
